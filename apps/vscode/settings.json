{
    "editor.insertSpaces": true,
    "editor.fontFamily": "'Inconsolata', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.formatOnType": true,
    "editor.rulers": [
        80,
        160
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.tabSize": 4,
    "files.eol": "\n",
    "files.exclude": {
        ".vscode": true,
        "build": true,
        "node_modules": true,
        "typings": true
    },
    "files.trimTrailingWhitespace": true,
    "html.format.endWithNewline": true
}
